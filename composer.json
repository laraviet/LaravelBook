{
    "name": "laraviet/laravel-book",
    "type": "library",
    "description": "Laravel wrapper for book ddd",
    "keywords": [
        "Laraviet",
        "LaravelBook"
    ],
    "homepage": "https://github.com/Laraviet/LaravelBook",
    "license": "MIT",
    "authors": [
        {
            "name": "Nguyễn Trung Thành",
            "email": "thanhcttsp@gmail.com",
            "homepage": "http://portalbeanzvn.com",
            "role": "Technician"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "laraviet/ddd-book": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Laraviet\\LaravelBook\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laraviet\\LaravelBook\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
